<html>
    <head>
    	<title>Show Room</title>
    </head>
    <body>
        <% if flash[:notice] %>
            <div class="notice"><%= flash[:notice] %></div>
        <% end %>
        <table>
            <tr>
                <th>Name</th>
                <th>Building</th>
                <th>Tools</th>
                <th>Capacity</th>
            </tr>
            <% @room.each do |r| %>
            <tr>
                <td><%= r.name %></td>
                <td><%= r.building %></td>
                <td><%= r.tools %></td>
                <td><%= r.capacity %></td>
                <td><%= button_to 'Edit', edit_roomform_path(:room => r), data: {confirm: "Are you sure?"} %></td>
                <td><%= button_to 'Delete', delete_path(:name => r.name), data: {confirm: "Are you sure?"} %></td>
            </tr>
            <% end %>
        </table>
        <%= link_to 'Back', rooms_index_path %>
    </body>
</html>