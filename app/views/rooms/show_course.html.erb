<html>
    <head>
    	<title>Show Room</title>
    </head>
    <body>
        <% if flash[:notice] %>
            <div class="notice"><%= flash[:notice] %></div>
        <% end %>
    <div class="media">
        <div class="media-body">
            <table class="table table-hover">
            <tr>
                <th>Course</th>
                <th>Room</th>
                <th>Day</th>
                <th>Time</th>
            </tr> 
            <% @course.each do |c| %>
            <tr>
                <td><%= c.cname %></td>
                <td><%= c.rname %></td>
                <td><%= c.day %></td>
                <td><%= c.time %></td>
                <td><%= button_to 'Delete', destroy_path(:id => c.id), class: 'btn-mini btn-danger', data: {confirm: "Are you sure?"}, :id => "Delete_#{c.cname}" %></td>
            </tr>
            <% end %>
        </table>
        </div>
    </div>    
        
        <%= link_to 'Back', rooms_index_path %>
    </body>
</html>